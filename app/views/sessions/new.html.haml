%h1 Log In
= form_tag sessions_path do
  %p
    = label_tag :username
    %br
    = text_field_tag :username, params[:username]
  %p
    = label_tag :password
    %br
    = password_field_tag :password
  %p.button
    = submit_tag "Log In"

%h1 Sign Up
= form_tag users_path do
  %p
    = label_tag :username
    %br
    = text_field_tag :username, params[:username]
    %p
      = label_tag :email
      %br
      = text_field_tag :email, params[:email]
  %p
    = label_tag :password
    %br
    = password_field_tag :password
  %p.button
    = submit_tag "Sign Up"